# Processing
cd $HOME
wget http://download.processing.org/processing-3.5.3-linux64.tgz
tar xvf processing-3.5.3-linux64.tgz
echo 'export PROCESSING_JAVA=$HOME/processing-3.5.3/processing-java' >> .profile
